<%= form_for(arcade) do |f| %>

<% if arcade.errors.any? %>
<div class="form-group">
    <div class='row'>
        <div class='col-xs-offset-2 col-sm-offset-2 col-xs-8 col-sm-8'>
            <div id="error_explanation">
                <h2 class="text-center"><%= pluralize(arcade.errors.count, "error") %>
                    prohibited this arcade from being saved:</h2>
                <div class="alert alert-warning" role="alert">
                    <ul>
                        <% arcade.errors.full_messages.each do |message| %>
                        <li>
                            <%= message %>
                        </li>
                        <% end %>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
<% end %>

<div class="form-group">
    <div class='row'>
        <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
            <%= f.label :title, class:'form-label align-right' %>
        </div>
        <div class='col-xs-4 col-sm-4'>
            <%= f.text_field :title, class:'form-control' %>
        </div>
    </div>
</div>

<div class="form-group">
    <div class='row'>
        <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
            <%= f.label :address, class:'form-label align-right' %>
        </div>
        <div class='col-xs-4 col-sm-4'>
            <%= f.text_area :address, class:'form-control' %>
        </div>
    </div>
</div>

<div class="form-group">
    <div class='row'>
        <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
            <%= f.label :phone_number, class:'form-label align-right' %>
        </div>
        <div class='col-xs-4 col-sm-4'>
            <%= f.telephone_field :phone_number, class:'form-control' %>
        </div>
    </div>
</div>

<div class="form-group">
    <div class='row'>
        <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
            <%= f.label :website, class:'form-label align-right' %>
        </div>
        <div class='col-xs-4 col-sm-4'>
            <%= f.text_field :website, class:'form-control' %>
        </div>
    </div>
</div>

<div class="form-group">
    <div class='row'>
        <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
            <%= f.label :status, class:'form-label align-right' %>
        </div>
        <div class='col-xs-4 col-sm-4'>
            <%= f.select(:status, ['Operational','Updating','Closed'], {}, { class:'form-control' }) %>
        </div>
    </div>
</div>

<div class="form-group">
    <div class='row'>
        <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
            <%= f.label :image, class:'form-label align-right' %>
        </div>
        <div class='col-xs-4 col-sm-4'>
            <%= f.file_field :image, class:'form-control' %>
        </div>
    </div>
</div>

<div class="form-group">

    <div class='row'>
        <div class='col-md-offset-4 col-sm-4'>
            <%= f.submit class:'btn btn-primary' %>
        </div>
    </div>
</div>

<% end %>
