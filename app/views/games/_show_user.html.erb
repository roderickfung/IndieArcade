<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <h2><%= @game.title %></h2>
    </div>
</div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <h4>
            <i>By
                <%= @game.user.company_name %></i>
        </h4>
    </div>

</div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <%= link_to 'Buy Now!', @game.purchase_url, class:'btn btn-default btn-md' %>
    </div>
</div>
<% if current_user %>
<div class='col-xs-offset-3 col-sm-offset-3 col-xs-2 col-sm-2'>
    <%= link_to 'Download File', "http://#{@game.game_file.url}", class:'btn btn-primary' %>
    <% end %>
</div>

<div class='page-divider'></div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-8 col-sm-8'>
        <% if @game.image.url %>
        <center class='game-img'><%= image_tag @game.image.url(:main_game_image) %></center>
    <% else %>
        <%= image_tag "game-placeholder.jpg" %>
        <% end %>
    </div>
</div>

<div class='page-divider-semi'></div>

<div class='row'>
    <div class='col-xs-offset-9 col-sm-offset-9 col-xs-3 col-sm-3'>
        <div class='btn-group'>
            <% if current_user == @game.user %>
            <%= link_to 'Update Key Map', new_game_key_path(@game), class:'btn btn-default btn-sm' %>
            |
            <%= link_to 'Edit', edit_game_path(@game), class:'btn btn-default btn-sm' %>
            <% end %>
            <%= link_to 'Back', games_path, class: 'btn btn-default btn-sm' %>
        </div>
    </div>
</div>
<div class='page-divider'></div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
        <strong>Last Published:</strong>
    </div>
    <div class='col-xs-2 col-sm-2'>
        <%= @game.last_in_arcade %>
    </div>
</div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
        <strong>Times Played:</strong>
    </div>
    <div class='col-xs-2 col-sm-2'>
        <%= @game.times_played %>
    </div>
</div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
        <strong>Status:</strong>
    </div>
    <div class='col-xs-2 col-sm-2'>
        <%= @game.status %>
    </div>
</div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-2 col-sm-2'>
        <strong>Game Description:</strong>
    </div>
    <div class='col-xs-6 col-sm-6'>
        <%= @game.game_description %>
    </div>
</div>

<div class='page-divider'></div>

<div class='page-divider'></div>

<% if current_user %>
<hr>
<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <h2>Reviews (<%= @game.reviews.count %>)</h2>
    </div>
</div>
<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <strong>Times played:
            <%= @game.times_played %></strong>
    </div>
</div>
<br>

<% @game.reviews.each do |ans| %>
<div id='reviews'>
    <%= render 'reviews/graph', ans: ans %>
</div>
<% end %>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <h4>Custom Statistics:
        </h4>
    </div>
</div>
<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        Number of deaths:
        <%= rand(5..45) %>
    </div>
</div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        Number of crashes:
        <%= rand(5..45) %>
    </div>
</div>
<br>
<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <%= link_to 'Download raw statisticts in raw .csv format', nil, class:'btn btn-default btn-sm' %>
    </div>
</div>

<div class='row'>
    <div class='col-xs-offset-2 col-sm-offset-2 col-xs-4 col-sm-4'>
        <%= link_to 'Download crash logs', nil, class:'btn btn-default btn-sm' %>
    </div>
</div>

<% end %>
