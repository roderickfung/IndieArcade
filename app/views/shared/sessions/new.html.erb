<div class='form-header-spacing'>

    <div class='row'>
        <div class='col-sm-offset-2  col-md-offset-4 col-xs-12 col-sm-12'>
            <h1>Login</h1>
        </div>
    </div>

    <div class='form-spacing'></div>

    <%= form_tag '/login' do %>
    <div class='form-group'>
        <div class='row'>
            <div class='col-sm-offset-2 col-md-offset-2 col-sm-2 col-xs-12 '>
                <%= label_tag :email%>
            </div>
            <div class='col-xs-4 col-sm-4 col-xs-12'>
                <%= email_field_tag :email, '', class: 'form-control' %>
            </div>
        </div>
    </div>

    <div class='form-group'>
        <div class='row'>
            <div class='col-sm-offset-2 col-xs-2 col-sm-2 col-xs-12'>
                <%= label_tag :password%>
            </div>
            <div class='col-xs-4 col-sm-4 col-xs-12'>
                <%= password_field_tag :password, '', class: 'form-control' %>
            </div>
        </div>
    </div>

    <div class='row'>
        <div class='col-sm-offset-4  col-xs-12 col-sm-12'>
            <%= check_box_tag :remember_me, 1, params[:remember_me] %>
            &nbsp;&nbsp;<%= label_tag :remember_me %>
        </div>
    </div>

    <div class='form-spacing'>

        <div class='form-group'>
            <div class='row'>
                <div class=' col-sm-offset-4 col-xs-12 col-sm-3'>
                    <%= submit_tag :submit, class:'btn btn-primary'%>
                </div>
            </div>
        </div>

        <% end %>

        <div class='row'>
            <div class='col-sm-offset-4  col-xs-12 col-sm-3'>
                <%= link_to "Forgotten Password?", new_password_reset_path, class:'light-orange'%>
            </div>
        </div>

    </div>
</div>
