

<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>




<div class="row">
  <div class="header">
    <div class="col-md-6 text-center" >
      <img class="image-resp" src="images/arcade-machines.png" alt="arcade machines" />
    </div>
    <div class="col-md-6">
      <div class="row">
          <div class="col-md-7">
              <h1 class="text-center"> Got game? </h1>
          </div>

          <div class="col-md-5 text-left">
              </br></br>
             <%= link_to "submit your game", new_user_path, class: "btn btn-default" %>
          </div>

          <div class="col-md-12">
            <div class="search-container">
              <%= form_tag('/games', method: 'get', role: 'search', class: 'form-group') do %>
                <div class="form-group col-md-10" >
                  <%=text_field_tag 'search', nil, placeholder: 'Game Search', class:'form-control' %>
                </div>
                <%= submit_tag 'Search', class:'btn btn-default col-md-2 btn-primary', name: nil%>
              <%end%>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
  <div class="row">
      <div class="jumbotron text-center">
        <h2>Be a part of the Indie Arcade Game scene in Vancouver. </h2>
        <h4>Play games submitted by local games developers, and submit games you have created! </h4>
      </div>
  </div>

    <div class="row">

    </div>

  <div class="row text-center">
    <h2>  <span class="glyphicon glyphicon-chevron-down pink" aria-hidden="true"> </span>  Find an arcade near you</h2>
    <div id="multi_markers" style='color:#23649d; width: 100%; height: 400px;'>

    </div>
  </div>



  <script>
  function initMap() {
         var handler = Gmaps.build('Google');
         handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
           var markers = handler.addMarkers(
             <%=raw @hash.to_json %>
           );
           handler.bounds.extendWith(markers);
           handler.fitMapToBounds();
         });
       }

     </script>
     <script async defer
          src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDq6CCq-NkrMmt793FCG-e8otBGj1vC7H0&callback=initMap">
        </script>
